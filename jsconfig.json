{
    "compilerOptions": {
        "baseUrl": "./",
        "checkJs": true,
        "jsx": "react-jsx",
        "paths": {
            "@client/*": ["./client/*"],
            "@server/*": ["./server/*"]
        },
        "target": "ES2021",
        "moduleResolution": "node"
    },
    "include": ["**/src/**/*", "server/app.js"],
    "exclude": ["node_modules"]
}